<div class="enquete-container">
    <!--Stappen teller-->
    <h3></h3>
    <form method="POST" action="/submit" class="enquete-form">
        <% if (data) { %>
            <%- include('localstorage/enquete') -%>
                <% } else {%>
                    <div class="form-container">
                        <div class="form-group stap1">
                            <label for="firstName">Voornaam</label>
                            <input type="text" name="firstName" id="firstName" required>
                        </div>
                        <div class="form-group stap1">
                            <label for="lastName">achternaam</label>
                            <input type="text" name="lastName" id="lastName" required>
                        </div>
                        <div class="form-group stap2">
                            <label for="first-name">Docent</label>
                            <select name="docenten" id="docenten" required>
                <option value="Koop Reynders">Koop Reynders</option>
                <option value="Sanne 't hooft">Sanne 't hooft</option>
                <option value="Joost Faber">Joost Faber</option>
             </select>
                        </div>
                        <div class="form-group stap2">
                            <label for="first-name">Begin datum</label>
                            <input type="date" name="data" id="date" required>
                        </div>
                        <div class="form-group stap3">
                            <label for="first-name">Beoordeling</label>
                            <input type="radio" name="review" value="1" required>
                            <label for="1">1</label>
                            <input type="radio" name="review" value="2">
                            <label for="2">2</label>
                            <input type="radio" name="review" value="3">
                            <label for="3">3</label>
                            <input type="radio" name="review" value="4">
                            <label for="4">4</label>
                            <input type="radio" name="review" value="5">
                            <label for="5">5</label>
                            <input type="radio" name="review" value="6">
                            <label for="6">6</label>
                            <input type="radio" name="review" value="7">
                            <label for="7">7</label>
                            <input type="radio" name="review" value="8">
                            <label for="8">8</label>
                            <input type="radio" name="review" value="9">
                            <label for="9">9</label>
                            <input type="radio" name="review" value="10">
                            <label for="10">10</label>
                        </div>
                        <div class="form-group stap3">
                            <label for="first-name">Hoe moeilijk was het?</label>
                            <input type="text" id="difficult" name="difficult" required>
                        </div>
                        <div class="form-group stap4">
                            <label for="first-name">Hoe duidelijk is het uitgelegd?</label>
                            <input type="text" id="clarity" name="clarity" required>
                        </div>
                        <div class="form-group stap4">
                            <label for="first-name">Hoe goed snap je het</label>
                            <input type="text" id="understanding" name="understanding" required>
                        </div>
                    </div>
                    <div class="buttons">
                        <button class="previous" type="submit">Vorige stap</button>
                        <button class="submit next" type="submit">Volgende stap</button>
                        <button class="submit no-js" type="submit">Sla gegevens op</button>
                    </div>
    </form>
    <% } %>
</div>