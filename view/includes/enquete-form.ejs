<div class="enquete-container">
    <h2></h2>
    <form method="POST" action="/submit" class="enquete-form">
        <% if (data) { %>
            <%- include('localstorage/enquete') -%>
                <% } else {%>
                    <div class="form-container">
                        <div class="form-group stap1">
                            <label for="firstName">Voornaam</label>
                            <input type="text" name="firstName" required>
                        </div>
                        <div class="form-group stap1">
                            <label for="lastName">achternaam</label>
                            <input type="text" name="lastName" required>
                        </div>
                        <div class="form-group stap2">
                            <label for="first-name">Docent</label>
                            <select name="docenten" id="docenten" required>
                    <option value="Rowin">Rowin</option>
                    <option value="Sanne">Sanne</option>
                    <option value="Joost">Joost</option>
                    <option value="overig">Overig</option>
                </select>
                        </div>
                        <div class="form-group stap2">
                            <label for="first-name">Begin datum</label>
                            <input type="date" name="data" id="date" required>
                        </div>
                        <div class="form-group stap3">
                            <label for="first-name">Beoordeling</label>
                            <input type="radio" id="male" name="review" value="1" required>
                            <label for="male">1</label><br>
                            <input type="radio" id="female" name="review" value="2">
                            <label for="female">2</label><br>
                            <input type="radio" id="other" name="review" value="3">
                            <label for="other">3</label>
                            <input type="radio" id="other" name="review" value="4">
                            <label for="other">4</label>
                            <input type="radio" id="other" name="review" value="5">
                            <label for="other">5</label>
                            <input type="radio" id="other" name="review" value="6">
                            <label for="other">6</label>
                            <input type="radio" id="other" name="review" value="7">
                            <label for="other">7</label>
                            <input type="radio" id="other" name="review" value="8">
                            <label for="other">8</label>
                            <input type="radio" id="other" name="review" value="9">
                            <label for="other">9</label>
                            <input type="radio" id="other" name="review" value="10">
                            <label for="other">10</label>

                        </div>
                        <div class="form-group stap3">
                            <label for="first-name">Hoe moeilijk was het?</label>
                            <input type="text" id="lname" name="difficult" required>
                        </div>
                        <div class="form-group stap4">
                            <label for="first-name">Hoe duidelijk is het uitgelegd?</label>
                            <input type="text" id="lname" name="clarity" required>
                        </div>
                        <div class="form-group stap4">
                            <label for="first-name">Hoe goed snap je het</label>
                            <input type="text" id="lname" name="understanding" required>
                        </div>
                    </div>
                    <button class="submit next" type="submit">Volgende stap</button>
                    <button class="submit no-js" type="submit">Sla gegevens op</button>
    </form>
    <% } %>
</div>